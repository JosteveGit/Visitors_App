<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@drawable/id_bg_2">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="70dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/josteve"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_marginTop="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: Josteve Adekanbi"
        android:textSize="25sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address: Lagos Nigeria"
        android:textSize="25sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone: Josteve Adekanbi"
        android:textSize="25sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nationality: Josteve Adekanbi"
        android:textSize="25sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purpose: Josteve Adekanbi"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="bottom|right"
        android:scaleType="centerCrop"
        android:src="@drawable/sample_qr" />

</LinearLayout>